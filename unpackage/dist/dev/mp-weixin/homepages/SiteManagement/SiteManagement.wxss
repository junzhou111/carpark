.sitemanagement {
  width: 100%;
  background-color: #eee;
  padding: 0 0 20px 0;
  box-sizing: border-box;
}
.sitemanagement .fromview {
  margin: 0 auto;
  width: 250px;
}
.sitemanagement .fromview .calendarinput {
  width: 250px;
  height: 40px;
  line-height: 18px;
  margin: 10px 10px 10px 0;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}
.sitemanagement .fromview .confirmbtn {
  margin: 0 0 20px 0;
}
.sitemanagement .inputbox {
  margin: 15px;
  padding: 20px;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 5px;
}
.sitemanagement .inputbox .input {
  width: 100%;
}
.sitemanagement .inputbox .inputbtn {
  display: flex;
  justify-content: space-between;
}
.sitemanagement .inputbox .inputbtn .bt {
  margin: 20px 0 0;
}
.sitemanagement .cardetails {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 15px 15px 15px;
  box-sizing: border-box;
}
.sitemanagement .cardetails .cardetails-item {
  width: 48%;
  border: 1px solid #eee;
  border-radius: 5px;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 10px;
}
.sitemanagement .cardetails .cardetails-item .cardetailsimg {
  width: 100%;
  height: 80px;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message {
  width: 100%;
  padding: 5px 10px 10px 10px;
  box-sizing: border-box;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-title {
  font-size: 18px;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-type {
  font-size: 12px;
  color: red;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-time {
  font-size: 12px;
  padding: 5px 0;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-icon {
  display: flex;
  justify-content: space-between;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-icon .cardetails-delete {
  height: 30px;
  line-height: 30px;
  background-color: red;
  color: #fff;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-icon .cardetails-remove {
  height: 30px;
  line-height: 30px;
  background-color: green;
  color: #fff;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-btn {
  width: 100%;
  height: 30px;
  border: 1px solid #c7c7c7;
  margin-top: 5px;
  display: flex;
  justify-content: space-between;
  border-radius: 5px;
  overflow: hidden;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-btn .cardetails-inp {
  height: 30px;
  line-height: 30px;
  padding: 0 0 0 10px;
}
.sitemanagement .cardetails .cardetails-item .cardetails-message .cardetails-btn .cardetails-click {
  width: 70px;
  text-align: center;
  background-color: #198754;
  color: white;
  height: 30px;
  line-height: 30px;
}

