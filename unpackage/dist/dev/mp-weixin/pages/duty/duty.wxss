.duty {
  background-color: #eee;
  overflow: hidden;
}
.duty .select {
  width: 60%;
  margin: 10px auto;
}
.duty .duty-item {
  margin: 5px 15px;
  border: #acacac 1px solid;
  border-radius: 5px;
  box-sizing: border-box;
  background-color: #fff;
}
.duty .duty-item .duty-box-img .img {
  width: 100%;
}
.duty .duty-item .duty-box-title {
  width: 100%;
  padding: 4px 8px 10px;
  box-sizing: border-box;
}
.duty .duty-item .duty-box-title .title-plate {
  font-size: 18px;
  display: inline;
  color: #4169e1;
  font-weight: 900;
}
.duty .duty-item .duty-box-title .title-price {
  font-size: 18px;
  display: inline;
  color: #ff0000;
  font-weight: 900;
}
.duty .duty-item .duty-box-title .title-time {
  display: inline;
  margin: 0;
}
.duty .duty-item .duty-box-title .title-colorplate {
  display: inline-block;
  background-color: royalblue;
  padding: 2px 3px;
  border-radius: 3px;
  color: white;
  margin: 0 10px;
}
.duty .duty-item .duty-box-title .btns {
  width: 100%;
  background-color: #0d6efd;
  margin: 5px 0 0 0;
  font-size: 15px;
  display: flex;
  border-radius: 5px;
}
.duty .duty-item .duty-box-title .btns .btn-item {
  width: 20%;
  text-align: center;
  color: white;
  padding: 10px 15px;
}
.scrollbox .carparklot-item {
  width: 80%;
  margin: 10px auto;
}
.fromview {
  margin: 0 auto;
  width: 250px;
}
.fromview .calendarinput {
  width: 250px;
  height: 40px;
  line-height: 18px;
  margin: 10px 10px 10px 0;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}
.fromview .confirmbtn {
  margin: 0 0 20px 0;
}

