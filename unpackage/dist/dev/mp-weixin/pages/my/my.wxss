.my {
  width: 100%;
  background-color: #eee;
  height: 100vh;
}
.my .my-headers {
  background-color: #fff;
  height: 165px;
}
.my .my-headers .my-box {
  width: 100%;
  height: 100px;
  background-color: #1296db;
}
.my .my-headers .my-box .header {
  padding: 20px;
  display: flex;
  justify-content: space-between;
}
.my .my-headers .my-box .header .userimg {
  width: 80px;
  border-radius: 50%;
}
.my .my-headers .my-box .header .usertitle {
  flex: 1;
}
.my .my-headers .my-box .header .usertitle view {
  padding: 10px 20px;
  color: white;
}
.my .my-headers .my-header {
  width: 100%;
  height: 50px;
  background-color: #1296db;
  border-radius: 0 0 200px 200px;
  margin-bottom: 10px;
}
.my .my-function-box {
  border-top: 5px solid #eee;
  background-color: #fff;
}
.my .my-function-box .my-function {
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
  box-sizing: border-box;
  border-bottom: #eee 1px solid;
}
.my .my-function-box .my-function .function-left {
  flex: 1;
  display: flex;
  align-items: center;
}
.my .my-function-box .my-function .function-left .left-icon {
  margin-right: 10px;
}
.my .my-function-box .my-function .function-right {
  width: 20px;
}
.my .my-footer {
  width: 100%;
  text-align: center;
  height: 60px;
  line-height: 60px;
  background-color: #fff;
  color: #1296db;
  margin-top: 30px;
}

