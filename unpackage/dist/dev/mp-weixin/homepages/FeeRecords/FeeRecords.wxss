.FeeRecords {
  width: 100%;
  height: 100%;
  background-color: #eee;
  padding: 0 0 20px 0;
  box-sizing: border-box;
}
.FeeRecords .inputbox {
  margin: 15px;
  padding: 20px;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 5px;
}
.FeeRecords .inputbox .input {
  width: 100%;
}
.FeeRecords .inputbox .inputbtn {
  display: flex;
  justify-content: space-between;
}
.FeeRecords .inputbox .inputbtn .bt {
  margin: 20px 0 0;
}
.FeeRecords .fromview {
  margin: 0 auto;
  width: 250px;
}
.FeeRecords .fromview .calendarinput {
  width: 250px;
  height: 40px;
  line-height: 18px;
  margin: 10px 10px 10px 0;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}
.FeeRecords .fromview .confirmbtn {
  margin: 0 0 20px 0;
}
.FeeRecords .Record-List {
  background-color: #fff;
  margin: 0 15px 15px 15px;
  padding: 20px;
  box-sizing: border-box;
  border-radius: 5px;
}
.FeeRecords .Record-List .Record-List-item {
  width: 100%;
  border-bottom: #eee 1px solid;
  padding: 10px;
  box-sizing: border-box;
}
.FeeRecords .Record-List .Record-List-item .item-left {
  display: flex;
  justify-content: space-between;
}
.FeeRecords .Record-List .Record-List-item .item-left .item-left-title {
  font-size: 17px;
}
.FeeRecords .Record-List .Record-List-item .item-left .item-right-money {
  font-size: 18px;
  color: red;
}
.FeeRecords .Record-List .Record-List-item .item-right {
  display: flex;
  justify-content: space-between;
}
.FeeRecords .Record-List .Record-List-item .item-right .item-left-time {
  height: 20px;
  line-height: 30px;
}
.FeeRecords .Record-List .Record-List-item .item-right .item-right-paymented {
  text-align: right;
  height: 20px;
  line-height: 20px;
  padding: 2px 5px;
  font-size: 13px;
  background-color: #ff0000;
  border-radius: 3px;
  color: #fff;
}
.allmoney {
  background-color: #eee;
  padding: 8px 10px;
  margin-bottom: 10px;
  border-radius: 5px;
}
.suorce {
  display: inline-block;
  font-size: 14px;
  color: #7d7d7d;
  width: 80px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.time {
  display: inline-block;
  width: 110px;
  font-size: 13px;
  color: #7d7d7d;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.u-loadmore {
  margin-top: 25px !important;
}
.topbtn {
  display: inline-block;
  width: 30px;
  height: 30px;
  background-color: #eee !important;
  position: fixed;
  bottom: 50px;
  right: 30px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.topbtn .u-icon {
  display: inline-block;
}

